{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node16",
    "module": "ESNext",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "outDir": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": true
  },
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.d.ts"]
}
